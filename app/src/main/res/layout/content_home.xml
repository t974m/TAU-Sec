<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="qu.elec499.tau.HomeActivity"
    tools:showIn="@layout/activity_home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="563dp"
        android:layout_margin="20dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="20dp"
        tools:ignore="MissingConstraints">

        <android.support.v7.widget.CardView
            android:id="@+id/yellow"
            style="@style/card"
            app:cardBackgroundColor="@color/yellow">

            <TextView
                style="@style/cardText"
                android:text="@string/add_resident"
                android:drawableStart="@drawable/ic_baseline_person_add_24"
                android:textSize="34sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/red"
            style="@style/card"
            android:layout_marginTop="@dimen/fifteen"
            app:cardBackgroundColor="#387BAF">

            <TextView
                style="@style/cardText"
                android:layout_width="172dp"
                android:drawableStart="@drawable/ic_baseline_edit_24"
                android:text="@string/manage_data"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="189dp"
                android:layout_height="71dp"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:background="#56CACACA"
                android:gravity="center_horizontal"
                android:text="Current Speed Limit (km/h):"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/SpeedInfo"
                android:layout_width="189dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_horizontal|center_vertical"
                android:layout_marginTop="17dp"
                android:background="#56CACACA"
                android:gravity="center"
                android:text="speedLimit"
                android:textSize="34sp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/blue"
            style="@style/card"
            android:layout_height="10dp"
            android:layout_marginTop="@dimen/fifteen"
            app:cardBackgroundColor="@color/blue">

            <TextView
                style="@style/cardText"
                android:text="History"
                android:drawableStart="@drawable/ic_baseline_history_24"
                android:textSize="34sp" />
        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>